<!DOCTYPE html>
<html lang="en">

<head>
  <%-include('partials/adminHead')%>
    <link rel="stylesheet" href="/css/adminBlogs.css">
</head>

<body>
  <%-include ('partials/adminNav')%>
    <div id="blogs">
      <% if ( blogs.length> 0 ){ %>
        <% blogs.forEach(blog=>{%>
          <div class="blog">
            <a href="/blog/<%=blog._id%>">
              <div class="highlight-blog-img">
                <img src="<%=blog.thumbnail%>" alt="">
              </div>
              <div class="highlight-blog-blog-info">
                <p class="blog-tag">
                  <%=blog.tag%>
                </p>
                <h4>
                  <%=blog.title%>
                </h4>
                <!-- <p class="desc"><%=blog.desc%></p>
                  <p class="date">27 jun 2023</p> -->
              </div>
            </a>
            <i class="fa-solid fa-trash" onclick="(function(){
              deleteBlog ('<%=blog._id%>')
              return false;
          })();"></i>
            <a href="/updateBlog/<%=blog._id%>"><i class="fa-regular fa-pen-to-square"></i></a>
            <%if(blog.isStar){%>
              <i class="fa-solid fa-star" style="color: yellow;" onclick="(function(){alert(`it's already fetured`)})()"></i>
              <%}else{%>
                <i class="fa-solid fa-star" onclick="(function(){makeStar('<%=blog._id%>')})()"></i>
                <%}%>
          </div>
          <%})%>
            <% } else { %>
              <p>There are no vlogs to dispaly...</p>
              <%}%>
    </div>
    <script src="https://kit.fontawesome.com/5b64da542e.js" crossorigin="anonymous"></script>
    <script src="/js/adminBlogs.js"></script>

</body>

</html>